{
  "name": "@webdeveric/eslint-config-mono-repo",
  "private": true,
  "scripts": {
    "lerna": "lerna",
    "clean": "lerna clean",
    "lint": "lerna run lint",
    "bootstrap": "lerna bootstrap",
    "bootstrap:local": "lerna bootstrap --force-local && lerna link --force-local",
    "spellcheck": "cspell --no-progress './**/*'",
    "format": "prettier --write ./**/*.json ./packages/**/*.js",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix"
    ],
    "*.{js,json,md}": [
      "cspell --no-progress --no-summary --no-must-find-files",
      "prettier --write"
    ]
  },
  "prettier": "@webdeveric/prettier-config",
  "devDependencies": {
    "@webdeveric/prettier-config": "^0.2.0",
    "cspell": "^5.20.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2"
  }
}
